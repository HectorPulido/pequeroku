{
	"extends": "./tsconfig.node.json",
	"compilerOptions": {
		"composite": true,
		"baseUrl": "./",
		"allowJs": true,
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"src/**/*.js"
	],
	"references": [{ "path": "./tsconfig.node.json" }]
}
